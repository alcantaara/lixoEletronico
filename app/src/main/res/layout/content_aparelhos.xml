<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="br.com.lixoeletronico.lixoeletronico.AparelhosActivity"
    tools:showIn="@layout/app_bar_aparelhos">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="left"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="25dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Selecione a categoria:"
                android:textSize="20sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_marginTop="6dp">

            <Spinner
                android:id="@+id/spCategoria"
                android:layout_width="290dp"
                android:layout_height="28dp"
                android:gravity="center_horizontal"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="left"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="25dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Selecione a subcategoria:"
                android:textSize="20sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_marginTop="6sp">

            <Spinner
                android:id="@+id/spSubCategoria"
                android:layout_width="290dp"
                android:layout_height="28dp"
                android:gravity="center_horizontal" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="16dp"
            android:weightSum="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Adicione uma foto:"
                android:textSize="20sp"
                android:layout_marginRight="35dp"/>

            <ImageButton
                android:id="@+id/botao_foto"
                android:layout_width="36dp"
                android:layout_height="37dp"
                android:background="@drawable/ic_menu_camera"
                android:layout_weight="0.07" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginTop="25dp">


            <ImageView
                android:id="@+id/exibeFoto"
                android:layout_width="170dp"
                android:layout_height="150dp"
                android:background="@drawable/ic_agenda_foto" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="25dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="25dp"
                android:text="Digite a quantidade:"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/agenda_quantidade"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:textSize="20sp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="25dp">

            <Button
                android:id="@+id/botao_outro"
                android:layout_width="210dp"
                android:layout_height="35dp"
                android:text="Adicionar outro"
                android:textSize="20sp"
                android:background="@color/cinza"
                android:textColor="@color/branco" />

            <Button
                android:id="@+id/botao_agendou"
                android:layout_width="210dp"
                android:layout_height="35dp"
                android:layout_marginTop="35dp"
                android:text="Concluir"
                android:textSize="20sp"
                android:background="@color/fundo"
                android:textColor="@color/branco"/>

        </LinearLayout>


    </LinearLayout>

</ScrollView>
